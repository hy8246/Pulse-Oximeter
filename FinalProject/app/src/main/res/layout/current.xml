<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.wit.mobileapp.listview.Current">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current Status"
        android:id="@+id/current_status_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username:"
        android:id="@+id/username_name"
        android:layout_above="@+id/heart_rate_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Empty"
        android:id="@+id/username_value"
        android:layout_above="@+id/bpm_value"
        android:layout_toStartOf="@+id/BacktoMenuBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BPM"
        android:id="@+id/bpm_unit"
        android:layout_below="@+id/username_value"
        android:layout_alignEnd="@+id/current_status_title" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="1in"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/BacktoMenuBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Heart Rate:"
        android:id="@+id/heart_rate_name"
        android:layout_above="@+id/bpm_graph"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/bpm_value"
        android:text="Empty"
        android:layout_below="@+id/username_name"
        android:layout_toStartOf="@+id/BacktoMenuBtn" />


    <Button
        android:layout_width="1in"
        android:layout_height="wrap_content"
        android:text="Evaluation"
        android:id="@+id/evaluationBtn"
        android:layout_alignTop="@+id/BacktoMenuBtn"
        android:layout_alignParentStart="true" />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/bpm_graph"
        android:layout_above="@+id/BacktoMenuBtn"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/BacktoMenuBtn" />

</RelativeLayout>

